{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Editer</th>
                <td>
                    <btn class="btn btn-success rounded-pill w-25"><a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-decoration-none text-white">Edit</a></btn>
                </td>
            </tr>
            <tr>
                <th>All your reviews
                <td>
                    <btn class="btn btn-primary rounded-pill w-25"><a href="{{ path('app_user_review_show', {'user': user.id}) }}" class="text-decoration-none text-white">List</a></btn>
                </td>
            </tr>
            <tr>
                <th>Delete</th>
                <td>
                    {{ include('user/_delete_form.html.twig') }}
                </td>
            </tr>

        </tbody>
    </table>


{% endblock %}
