{% extends 'base.html.twig' %}

{% block title %}UserReview{% endblock %}

{% block body %}
    <h1>UserReview</h1>
    {%  for user_review in user_reviews %}
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="..." class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">Your review: </h5>
                        <p class="card-text">{{ user_review.content }}</p>
                        <p class="card-text">{{ user_review.rate }}</p>
                        <p class="card-text"><small class="text-muted">{{ user_review.date ? user_review.date|date('Y-m-d H:i:s') : '' }}</small></p>
                        <btn class="btn btn-success rounded-pill w-25"><a href="{{ path('app_user_review_edit', {'id': user_review.id}) }}" class="text-decoration-none text-white">Edit</a></btn>
                        {{ include('user_review/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
