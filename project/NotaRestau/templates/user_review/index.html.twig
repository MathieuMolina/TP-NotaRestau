{% extends 'base.html.twig' %}

{% block title %}UserReview index{% endblock %}

{% block body %}
    <h1>UserReview index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rate</th>
                <th>Content</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user_review in user_reviews %}
            <tr>
                <td>{{ user_review.id }}</td>
                <td>{{ user_review.rate }}</td>
                <td>{{ user_review.content }}</td>
                <td>{{ user_review.date ? user_review.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_user_review_show', {'id': user_review.id}) }}">show</a>
                    <a href="{{ path('app_user_review_edit', {'id': user_review.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_review_new') }}">Create new</a>
{% endblock %}
